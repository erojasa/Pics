<div class="posts-wrapper row">
  <div class="post">
    <%= link_to "Editar Post", edit_post_path(@post) %>
</div>
    <div class="image center-block">
      <%= image_tag @post.squared_img, class:'img-responsive' %>
    </div>
    <div class="post-head">
      <div class="name">
        <%= @post.user.email if @post.user %>
      </div>
    </div>
    <p class="description">
      <%= @post.description %>
    </p>
  </div>
</div>