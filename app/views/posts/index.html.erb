<% if user_signed_in? %>
  <div class="main-wrapper">
    <div class="row">
      <% @posts.each do |post| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="image center-block">
            <% if post.image.attached? %>
            <%= link_to (image_tag post.image.variant(resize: '600x600>').processed, class:'img-fluid'), post_path(post) %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="jumbotron text-center">
   <h1>Â¡Welcome to Pics!</h1>
   <p><%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like' : 'Likes'%></p>
     <p>
       <%= link_to "Log in", new_user_session_path, class: "btn btn-default btn-lg" %>
       <%= link_to "Sign in", new_user_registration_path, class: "btn btn-primary btn-lg" %>
     </p>
  </div>
   <%= will_paginate @posts %>
<% end %>
