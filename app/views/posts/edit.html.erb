<div class="text-center">
  <%= image_tag @post.squared_img %>
</div>

<div class="form-wrapper">
  <h2>Update Post</h2>
  <%= render 'form' %>
</div>

<%= link_to 'Show', @post %> |
<%= link_to 'Back', posts_path %>

<div class="text-center edit-links">
  <%= link_to "Delete Post", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete post?" } %>
  |
  <%= link_to "cancelar", posts_path %>
</div>